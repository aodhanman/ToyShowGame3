<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.flange.aodhan.toyshowgame.MainActivity"
    android:background="@drawable/christmas">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:id="@+id/top"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Ryan breaks a toy"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button3"
            android:layout_weight="1"
            />

        <Button
            android:text="Ryan wears a wig"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button2"
            android:layout_weight="1"
            />

        <Button
            android:text="Mic Doesn't work"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:id="@+id/merryplay"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_below="@+id/audience"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/third">

        <Button
            android:text="Ryan makes a doll poop"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/button10"
            android:layout_weight="1"

            android:textSize="14sp"
            android:padding="5dp"
            android:elevation="1dp" />

        <Button
            android:text="Ryan flattens kid"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/button11"
            android:layout_weight="1"
            />

        <Button
            android:text="boyband appearance"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/button12"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/second"
        android:layout_below="@+id/top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Toy made in Ireland"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/button4"
            android:layout_weight="1"
            />

        <Button
            android:text="BOOKS, SO MANY BOOKS"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/button5"
            android:layout_weight="1"
            />

        <Button
            android:text="Kid meets hero"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/button6"
            android:layout_weight="1"
            />
    </LinearLayout>

    <Button
        android:text="One for everyone in the audience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/audience"
        android:layout_weight="1"
        android:backgroundTint="@android:color/holo_red_light"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/second"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/bottom"
        android:layout_below="@+id/third"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Mannequin Challenge"
            android:layout_height="100dp"
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_weight="1" />

        <Button
            android:text="Siblings Fighting"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/button8"
            android:layout_weight="1" />

        <Button
            android:text="Jedward Attack"
            android:layout_width="match_parent"
            android:id="@+id/jedward"
            android:elevation="0dp"
            android:layout_height="100dp"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>
